{
  "name": "grove-cli",
  "version": "1.0.0",
  "description": "A CLI tool for Git worktree management with interactive TUI",
  "main": "dist/index.js",
  "bin": {
    "grove": "dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "format:md": "prettier --write *.md",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome format --write",
      "biome lint --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "tui",
    "fuzzy-search",
    "developer-tools"
  ],
  "author": "Oskar Grunning <oskargrunning@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cosmiconfig": "^9.0.0",
    "figures": "^6.1.0",
    "fuse.js": "^7.0.0",
    "ink": "^5.0.0",
    "react": "^18.0.0",
    "yargs": "^17.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.12",
    "@types/react": "^18.0.0",
    "@types/yargs": "^17.0.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqve/grove.git"
  },
  "bugs": {
    "url": "https://github.com/sqve/grove/issues"
  },
  "homepage": "https://github.com/sqve/grove#readme"
}
